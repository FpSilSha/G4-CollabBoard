# Database (Docker local or Railway PostgreSQL)
DATABASE_URL=postgresql://collabboard:collabboard_dev@localhost:5432/collabboard

# Redis (Docker local or Upstash)
REDIS_URL=redis://localhost:6379

# Auth0
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_AUDIENCE=https://collabboard-api
AUTH0_ISSUER_BASE_URL=https://your-tenant.us.auth0.com

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_TEAM_PRICE_ID=
STRIPE_ENTERPRISE_PRICE_ID=

# ─── Anthropic AI Agent ───
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_COMPLEX=claude-sonnet-4-6
ANTHROPIC_MODEL_SIMPLE=claude-haiku-4-5-20251001
AI_MONTHLY_BUDGET_CENTS=1000
AI_MAX_TURNS_SIMPLE=5
AI_MAX_TURNS_COMPLEX=7
AI_ENABLED=true
AI_VIEWPORT_OBJECT_CAP=50
AI_CHAT_HISTORY_TTL=3600
AI_CHAT_MAX_MESSAGES=10

# ─── LangSmith Tracing ───
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=collabboard-ai
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Metrics Endpoint Auth (when set, requires X-Metrics-Token header; unset = open)
METRICS_TOKEN=

# Server Config
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# WebSocket Config
WS_PING_TIMEOUT=30000
WS_PING_INTERVAL=25000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
