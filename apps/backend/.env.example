# Database (Docker local or Railway PostgreSQL)
DATABASE_URL=postgresql://collabboard:collabboard_dev@localhost:5432/collabboard

# Redis (Docker local or Upstash)
REDIS_URL=redis://localhost:6379

# Auth0
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_AUDIENCE=https://collabboard-api
AUTH0_ISSUER_BASE_URL=https://your-tenant.us.auth0.com

# Stripe (post-MVP, leave blank for now)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_TEAM_PRICE_ID=
STRIPE_ENTERPRISE_PRICE_ID=

# Anthropic (post-MVP)
ANTHROPIC_API_KEY=

# Server Config
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# WebSocket Config
WS_PING_TIMEOUT=30000
WS_PING_INTERVAL=25000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
